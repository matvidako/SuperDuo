<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ShareButton">
        <item name="android:paddingLeft">@dimen/padding_share</item>
        <item name="android:paddingRight">@dimen/padding_share</item>
        <item name="android:drawableLeft">@android:drawable/ic_menu_share</item>
    </style>

    <style name="AboutContainer">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="MainContainer">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/list_horizonal_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_horizonal_margin</item>
    </style>

    <style name="WidgetText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

</resources>
