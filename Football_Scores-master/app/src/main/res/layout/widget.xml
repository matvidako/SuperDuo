<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green13"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/title"
        android:text="@string/widget_title"
        style="@style/WidgetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/team_home"
            android:contentDescription="@string/home_team"
            style="@style/WidgetText"
            tools:text="Home team"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/score"
            android:contentDescription="@string/score"
            tools:text="2 - 1"
            style="@style/WidgetText"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/team_away"
            android:contentDescription="@string/away_team"
            style="@style/WidgetText"
            tools:text="Away team"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>